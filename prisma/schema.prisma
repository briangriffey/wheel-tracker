generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum TradeType {
  PUT
  CALL
}

enum TradeAction {
  SELL_TO_OPEN // Opening a new position
  BUY_TO_CLOSE // Closing an existing position
}

enum TradeStatus {
  OPEN // Active option contract
  CLOSED // Manually closed
  EXPIRED // Expired worthless
  ASSIGNED // Option was exercised
}

enum PositionStatus {
  OPEN // Currently holding shares
  CLOSED // Position closed/sold
}

enum WheelStatus {
  ACTIVE // Currently in a wheel cycle
  IDLE // Completed cycle, waiting for new PUT
  PAUSED // User paused the wheel
  COMPLETED // User ended the wheel permanently
}

enum DepositType {
  DEPOSIT // Cash added to account
  WITHDRAWAL // Cash removed from account
}

enum SubscriptionTier {
  FREE
  PRO
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String? // For email/password auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Subscription fields
  subscriptionTier         SubscriptionTier @default(FREE)
  subscriptionStartDate    DateTime?
  subscriptionEndDate      DateTime?
  stripeCustomerId         String?          @unique
  stripeSubscriptionId     String?
  subscriptionStatus       String?          // "active" | "past_due" | "canceled" | "trialing"
  subscriptionEndsAt       DateTime?        // End of current billing period (for grace period)

  trades           Trade[]
  positions        Position[]
  wheels           Wheel[]
  benchmarks       Benchmark[]
  marketBenchmarks MarketBenchmark[]
  cashDeposits     CashDeposit[]
  accounts         Account[]
  sessions         Session[]
  analyticsEvents  AnalyticsEvent[]
  watchlistTickers WatchlistTicker[]
  scanResults      ScanResult[]

  @@index([email])
  @@index([subscriptionTier])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CashDeposit {
  id          String      @id @default(cuid())
  userId      String
  amount      Decimal     @db.Decimal(10, 2)
  type        DepositType @default(DEPOSIT)
  depositDate DateTime
  notes       String?

  // Benchmark tracking - SPY price and shares at time of deposit
  spyPrice  Decimal @db.Decimal(10, 4)
  spyShares Decimal @db.Decimal(10, 4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([depositDate])
  @@index([userId, depositDate])
  @@index([type])
}

model Trade {
  id               String      @id @default(cuid())
  userId           String
  ticker           String // Stock symbol (e.g., "AAPL")
  type             TradeType
  action           TradeAction
  status           TradeStatus @default(OPEN)
  strikePrice      Decimal     @db.Decimal(10, 2)
  premium          Decimal     @db.Decimal(10, 2) // Total premium collected/paid
  closePremium     Decimal?    @db.Decimal(10, 2) // Premium paid to close early (BUY_TO_CLOSE)
  realizedGainLoss Decimal?    @db.Decimal(10, 2) // Net P/L when closed early (premium - closePremium)
  contracts        Int // Number of contracts
  shares           Int // contracts * 100
  expirationDate   DateTime
  openDate         DateTime    @default(now())
  closeDate        DateTime?
  notes            String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations for assigned PUTs that create positions
  createdPosition Position? @relation("AssignmentTrade")

  // Relations for covered calls against positions
  position   Position? @relation("CoveredCalls", fields: [positionId], references: [id])
  positionId String?

  // Relations for wheel strategy tracking
  wheel   Wheel?  @relation("WheelTrades", fields: [wheelId], references: [id])
  wheelId String?

  // Relations for roll tracking (when options are rolled to new dates/strikes)
  rolledFrom   Trade?  @relation("RollTracking", fields: [rolledFromId], references: [id])
  rolledFromId String?
  rolledTo     Trade[] @relation("RollTracking")

  @@index([userId])
  @@index([ticker])
  @@index([status])
  @@index([expirationDate])
  @@index([userId, status])
  @@index([openDate])
  @@index([closeDate])
  @@index([userId, openDate])
  @@index([wheelId])
  @@index([rolledFromId])
  @@index([positionId])
  @@index([userId, ticker])
  @@index([userId, expirationDate])
  @@index([userId, status, expirationDate])
  @@index([ticker, status])
}

model Position {
  id               String         @id @default(cuid())
  userId           String
  ticker           String // Stock symbol
  shares           Int
  costBasis        Decimal        @db.Decimal(10, 2) // Cost per share
  totalCost        Decimal        @db.Decimal(10, 2) // Total amount paid
  currentValue     Decimal?       @db.Decimal(10, 2) // Current market value
  realizedGainLoss Decimal?       @db.Decimal(10, 2) // Gain/loss when closed
  status           PositionStatus @default(OPEN)
  acquiredDate     DateTime
  closedDate       DateTime?
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // The PUT trade that created this position (via assignment)
  assignmentTrade   Trade  @relation("AssignmentTrade", fields: [assignmentTradeId], references: [id])
  assignmentTradeId String @unique

  // Covered calls sold against this position
  coveredCalls Trade[] @relation("CoveredCalls")

  // Relations for wheel strategy tracking
  wheel   Wheel?  @relation("WheelPositions", fields: [wheelId], references: [id])
  wheelId String?

  @@index([userId])
  @@index([ticker])
  @@index([status])
  @@index([userId, status])
  @@index([acquiredDate])
  @@index([closedDate])
  @@index([userId, acquiredDate])
  @@index([userId, status, acquiredDate])
  @@index([wheelId])
  @@index([userId, ticker])
  @@index([userId, ticker, status])
}

model Wheel {
  id              String      @id @default(cuid())
  userId          String
  ticker          String
  status          WheelStatus @default(ACTIVE)
  cycleCount      Int         @default(0)
  totalPremiums   Decimal     @default(0) @db.Decimal(10, 2)
  totalRealizedPL Decimal     @default(0) @db.Decimal(10, 2)
  startedAt       DateTime    @default(now())
  lastActivityAt  DateTime    @default(now())
  completedAt     DateTime?
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades    Trade[]    @relation("WheelTrades")
  positions Position[] @relation("WheelPositions")

  @@index([userId, ticker])
  @@index([status])
  @@index([userId])
}

model WebhookEvent {
  id          String   @id // Stripe event ID (evt_xxx)
  type        String
  processedAt DateTime @default(now())

  @@index([processedAt])
}

model StockPrice {
  id        String   @id @default(cuid())
  ticker    String   @unique // Only one price per ticker
  price     Decimal  @db.Decimal(10, 2)
  source    String   @default("financial_data") // API source
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // When the price was last updated

  @@index([ticker])
}

model Benchmark {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  totalValue    Decimal  @db.Decimal(10, 2) // Portfolio value
  totalGainLoss Decimal  @db.Decimal(10, 2) // Cumulative gain/loss
  cashBalance   Decimal  @db.Decimal(10, 2) // Available cash
  notes         String?
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model MarketBenchmark {
  id             String    @id @default(cuid())
  userId         String
  ticker         String    // SPY, QQQ, VTI, etc.
  initialCapital Decimal   @db.Decimal(10, 2) // Amount initially invested
  setupDate      DateTime  // When the benchmark started
  initialPrice   Decimal   @db.Decimal(10, 4) // Price at setup
  shares         Decimal   @db.Decimal(10, 4) // Calculated: initialCapital / initialPrice
  migrated       Boolean   @default(false) // True if migrated to deposit-based system
  migratedAt     DateTime? // When migration occurred
  lastUpdated    DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
  @@index([migrated])
}

model AnalyticsEvent {
  id         String   @id @default(cuid())
  event      String // trade_limit_reached, upgrade_prompt_shown, checkout_started, subscription_activated
  userId     String
  properties String?  @db.Text // JSON-encoded event properties
  timestamp  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([event])
  @@index([userId])
  @@index([timestamp])
  @@index([event, timestamp])
}

model WebhookLog {
  id        String   @id @default(cuid())
  eventId   String // Stripe event ID
  eventType String // e.g. checkout.session.completed
  success   Boolean
  error     String?  @db.Text
  timestamp DateTime @default(now())

  @@index([eventType])
  @@index([success])
  @@index([timestamp])
  @@index([eventId])
}

model WatchlistTicker {
  id        String   @id @default(cuid())
  userId    String
  ticker    String
  notes     String?
  addedAt   DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
}

model HistoricalStockPrice {
  id     String   @id @default(cuid())
  ticker String
  date   DateTime
  open   Decimal  @db.Decimal(10, 4)
  high   Decimal  @db.Decimal(10, 4)
  low    Decimal  @db.Decimal(10, 4)
  close  Decimal  @db.Decimal(10, 4)
  volume BigInt

  @@unique([ticker, date])
  @@index([ticker])
}

model ScanResult {
  id       String   @id @default(cuid())
  userId   String
  scanDate DateTime

  // Ticker identity
  ticker String

  // Phase 1: Stock data (always populated)
  stockPrice     Decimal? @db.Decimal(10, 2)
  sma200         Decimal? @db.Decimal(10, 2)
  sma50          Decimal? @db.Decimal(10, 2)
  avgVolume      Decimal? @db.Decimal(15, 0)
  trendDirection String? // "rising", "flat", "falling"

  // Phase 1 filter result
  passedPhase1 Boolean @default(false)
  phase1Reason String?

  // Phase 2: IV data (populated if passed Phase 1)
  currentIV Decimal? @db.Decimal(8, 6)
  ivHigh52w Decimal? @db.Decimal(8, 6)
  ivLow52w  Decimal? @db.Decimal(8, 6)
  ivRank    Decimal? @db.Decimal(6, 2)

  // Phase 2 filter result
  passedPhase2 Boolean @default(false)
  phase2Reason String?

  // Phase 3: Selected option contract (populated if passed Phase 2)
  contractName String?
  strike       Decimal?  @db.Decimal(10, 2)
  expiration   DateTime?
  dte          Int?
  delta        Decimal?  @db.Decimal(8, 6)
  theta        Decimal?  @db.Decimal(8, 6)
  bid          Decimal?  @db.Decimal(10, 4)
  ask          Decimal?  @db.Decimal(10, 4)
  iv           Decimal?  @db.Decimal(8, 6)
  openInterest Int?
  optionVolume Int?
  premiumYield Decimal?  @db.Decimal(8, 2)

  // Phase 3 filter result
  passedPhase3 Boolean @default(false)
  phase3Reason String?

  // Phase 4: Scores (populated if passed Phase 3)
  yieldScore     Decimal? @db.Decimal(6, 2)
  ivScore        Decimal? @db.Decimal(6, 2)
  deltaScore     Decimal? @db.Decimal(6, 2)
  liquidityScore Decimal? @db.Decimal(6, 2)
  trendScore     Decimal? @db.Decimal(6, 2)
  compositeScore Decimal? @db.Decimal(6, 2)

  // Phase 5: Portfolio checks
  hasOpenCSP     Boolean @default(false)
  hasAssignedPos Boolean @default(false)
  portfolioFlag  String?

  // Overall
  passed      Boolean @default(false)
  finalReason String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, scanDate])
  @@index([userId, scanDate, passed])
  @@index([scanDate])
  @@index([compositeScore])
}
