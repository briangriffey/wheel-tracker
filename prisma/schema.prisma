generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum TradeType {
  PUT
  CALL
}

enum TradeAction {
  SELL_TO_OPEN // Opening a new position
  BUY_TO_CLOSE // Closing an existing position
}

enum TradeStatus {
  OPEN // Active option contract
  CLOSED // Manually closed
  EXPIRED // Expired worthless
  ASSIGNED // Option was exercised
}

enum PositionStatus {
  OPEN // Currently holding shares
  CLOSED // Position closed/sold
}

enum WheelStatus {
  ACTIVE // Currently in a wheel cycle
  IDLE // Completed cycle, waiting for new PUT
  PAUSED // User paused the wheel
  COMPLETED // User ended the wheel permanently
}

enum DepositType {
  DEPOSIT // Cash added to account
  WITHDRAWAL // Cash removed from account
}

// Models
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  password      String? // For email/password auth
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  trades           Trade[]
  positions        Position[]
  wheels           Wheel[]
  benchmarks       Benchmark[]
  marketBenchmarks MarketBenchmark[]
  cashDeposits     CashDeposit[]
  accounts         Account[]
  sessions         Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model CashDeposit {
  id          String      @id @default(cuid())
  userId      String
  amount      Decimal     @db.Decimal(10, 2)
  type        DepositType @default(DEPOSIT)
  depositDate DateTime
  notes       String?

  // Benchmark tracking - SPY price and shares at time of deposit
  spyPrice  Decimal @db.Decimal(10, 4)
  spyShares Decimal @db.Decimal(10, 4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([depositDate])
  @@index([userId, depositDate])
  @@index([type])
}

model Trade {
  id               String      @id @default(cuid())
  userId           String
  ticker           String // Stock symbol (e.g., "AAPL")
  type             TradeType
  action           TradeAction
  status           TradeStatus @default(OPEN)
  strikePrice      Decimal     @db.Decimal(10, 2)
  premium          Decimal     @db.Decimal(10, 2) // Total premium collected/paid
  closePremium     Decimal?    @db.Decimal(10, 2) // Premium paid to close early (BUY_TO_CLOSE)
  realizedGainLoss Decimal?    @db.Decimal(10, 2) // Net P/L when closed early (premium - closePremium)
  contracts        Int // Number of contracts
  shares           Int // contracts * 100
  expirationDate   DateTime
  openDate         DateTime    @default(now())
  closeDate        DateTime?
  notes            String?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Relations for assigned PUTs that create positions
  createdPosition Position? @relation("AssignmentTrade")

  // Relations for covered calls against positions
  position   Position? @relation("CoveredCalls", fields: [positionId], references: [id])
  positionId String?

  // Relations for wheel strategy tracking
  wheel   Wheel?  @relation("WheelTrades", fields: [wheelId], references: [id])
  wheelId String?

  // Relations for roll tracking (when options are rolled to new dates/strikes)
  rolledFrom   Trade?  @relation("RollTracking", fields: [rolledFromId], references: [id])
  rolledFromId String?
  rolledTo     Trade[] @relation("RollTracking")

  @@index([userId])
  @@index([ticker])
  @@index([status])
  @@index([expirationDate])
  @@index([userId, status])
  @@index([openDate])
  @@index([closeDate])
  @@index([userId, openDate])
  @@index([wheelId])
  @@index([rolledFromId])
  @@index([positionId])
  @@index([userId, ticker])
  @@index([userId, expirationDate])
  @@index([userId, status, expirationDate])
  @@index([ticker, status])
}

model Position {
  id               String         @id @default(cuid())
  userId           String
  ticker           String // Stock symbol
  shares           Int
  costBasis        Decimal        @db.Decimal(10, 2) // Cost per share
  totalCost        Decimal        @db.Decimal(10, 2) // Total amount paid
  currentValue     Decimal?       @db.Decimal(10, 2) // Current market value
  realizedGainLoss Decimal?       @db.Decimal(10, 2) // Gain/loss when closed
  status           PositionStatus @default(OPEN)
  acquiredDate     DateTime
  closedDate       DateTime?
  notes            String?
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // The PUT trade that created this position (via assignment)
  assignmentTrade   Trade  @relation("AssignmentTrade", fields: [assignmentTradeId], references: [id])
  assignmentTradeId String @unique

  // Covered calls sold against this position
  coveredCalls Trade[] @relation("CoveredCalls")

  // Relations for wheel strategy tracking
  wheel   Wheel?  @relation("WheelPositions", fields: [wheelId], references: [id])
  wheelId String?

  @@index([userId])
  @@index([ticker])
  @@index([status])
  @@index([userId, status])
  @@index([acquiredDate])
  @@index([closedDate])
  @@index([userId, acquiredDate])
  @@index([userId, status, acquiredDate])
  @@index([wheelId])
  @@index([userId, ticker])
  @@index([userId, ticker, status])
}

model Wheel {
  id              String      @id @default(cuid())
  userId          String
  ticker          String
  status          WheelStatus @default(ACTIVE)
  cycleCount      Int         @default(0)
  totalPremiums   Decimal     @default(0) @db.Decimal(10, 2)
  totalRealizedPL Decimal     @default(0) @db.Decimal(10, 2)
  startedAt       DateTime    @default(now())
  lastActivityAt  DateTime    @default(now())
  completedAt     DateTime?
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  trades    Trade[]    @relation("WheelTrades")
  positions Position[] @relation("WheelPositions")

  @@index([userId, ticker])
  @@index([status])
  @@index([userId])
}

model StockPrice {
  id        String   @id @default(cuid())
  ticker    String
  price     Decimal  @db.Decimal(10, 2)
  date      DateTime
  source    String   @default("alpha_vantage") // API source
  createdAt DateTime @default(now())

  @@unique([ticker, date])
  @@index([ticker])
  @@index([date])
  @@index([ticker, date])
}

model Benchmark {
  id            String   @id @default(cuid())
  userId        String
  date          DateTime
  totalValue    Decimal  @db.Decimal(10, 2) // Portfolio value
  totalGainLoss Decimal  @db.Decimal(10, 2) // Cumulative gain/loss
  cashBalance   Decimal  @db.Decimal(10, 2) // Available cash
  notes         String?
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}

model MarketBenchmark {
  id             String    @id @default(cuid())
  userId         String
  ticker         String    // SPY, QQQ, VTI, etc.
  initialCapital Decimal   @db.Decimal(10, 2) // Amount initially invested
  setupDate      DateTime  // When the benchmark started
  initialPrice   Decimal   @db.Decimal(10, 4) // Price at setup
  shares         Decimal   @db.Decimal(10, 4) // Calculated: initialCapital / initialPrice
  migrated       Boolean   @default(false) // True if migrated to deposit-based system
  migratedAt     DateTime? // When migration occurred
  lastUpdated    DateTime  @default(now())
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, ticker])
  @@index([userId])
  @@index([ticker])
  @@index([migrated])
}

model CashDeposit {
  id          String      @id @default(cuid())
  userId      String
  amount      Decimal     @db.Decimal(10, 2)
  type        DepositType @default(DEPOSIT)
  depositDate DateTime
  notes       String?

  // Benchmark tracking - SPY price and shares at time of deposit
  spyPrice  Decimal @db.Decimal(10, 4)
  spyShares Decimal @db.Decimal(10, 4)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([depositDate])
  @@index([userId, depositDate])
  @@index([type])
}
