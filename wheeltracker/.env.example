# Market Data Configuration
# Configure market data source for price fetching

# Provider options: mock, alpha_vantage, polygon, yahoo_finance, iex_cloud
MARKET_DATA_PROVIDER=mock

# API Key for the selected provider (not needed for mock)
MARKET_DATA_API_KEY=

# Rate limit (requests per minute)
MARKET_DATA_RATE_LIMIT=60

# Cache TTL in seconds (default: 300 = 5 minutes)
MARKET_DATA_CACHE_TTL=300

# Number of retry attempts on failure
MARKET_DATA_RETRY_ATTEMPTS=3
